{% layout true %}
<div class="metafields-demo">
  <div class="customize-section">
    <button onclick="addBlock()">Add Block</button>
    <div id="blocks-container">
      {% for block in page.metafields.blocks %}
        <div class="section-inner">
          <div class="label">{{ block.label }}</div>
          <div class="section-right">
            <div class="metafield input">
              {{ block.input_value }}
            </div>
            <div class="metafield">
              {{ block.display_value }}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<script>
  function addBlock() {
    // You need to adapt this based on your specific needs
    var newBlock = {
      label: 'New Block',
      input_value: '{% raw %}{{ page.metafields.custom_field }}{% endraw %}',
      display_value: '{{ page.metafields.custom_field }}'
    };

    // Append the new block to the blocks container
    var blocksContainer = document.getElementById('blocks-container');
    blocksContainer.innerHTML += generateBlockHTML(newBlock);
  }

  function generateBlockHTML(block) {
    return `
      <div class="section-inner">
        <div class="label">${block.label}</div>
        <div class="section-right">
          <div class="metafield input">
            ${block.input_value}
          </div>
          <div class="metafield">
            ${block.display_value}
          </div>
        </div>
      </div>
    `;
  }
</script>


<style>
  .metafields-demo {
    display: flex;
    gap: 15px;
    flex-wrap: wrap;
  }

  .section {
    width: 100%;
    max-width: 1120px;
    margin: auto;
  }

  .heading {
    margin-top: 0;
  }

  .label {
    min-width: 100px;
  }

  .section-inner {
    display: flex;
    border-radius: 5px;
    column-gap: 20px;
    background-color: #475569;
    padding: 20px;
    color: white;
    align-items: center;
  }

  .section-inner + .section-inner {
    margin-top: 15px;
  }

  .section-right {
    display: grid;
    gap: 10px;
    grid-template-columns: 1fr 1fr;
    width: 100%;
  }

  .metafield {
    color: #1e293b;
    padding: 5px 15px;
    border-radius: 5px;
    background-color: white;
    overflow-wrap: anywhere;
  }

  .metafield.input {
    font-family: monospace;
    background-color: black;
    color: white;
  }
</style>
