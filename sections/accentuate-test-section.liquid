<!-- Welcome section starts -->
<section class="welcome">
  <div class="metafields-demo">

    <div class="customize-section">

<div class="container">
        <div class="section-inner">

<div class="label">
{% if section.settings.section-heading != blank %}
<h2 class="label">{{ section.settings.section-heading }}</h2>
{% endif %}

{% if section.settings.section-large-heading != blank %}
          <div class="section-right">
          <div class="metafield input">
<h1 class="metafield input">{{ section.settings.section-large-heading }}</h1>
          </div>
{% endif %}
{% if section.settings.description != blank %}
            <div class="metafield">

<p class="metafield">{{ section.settings.description }}</p>
            </div>
            </div>
{% endif %}
</div>
          </div>
              </div>


<div class="col-xs-12 col-md-12 text-center">
{% if section.settings.view-btn != blank %}
<button class="view-btn">
<a href="{{ section.settings.view-btn-link }}">{{ section.settings.view-btn }}</a>
</button>
{% endif %}
</div>
</div>
      </div>

</section>
<!-- Welcome section ends -->
{% schema %}
{
"name": "Metafields Test", // Section name
"settings": [
{
"id": "section-heading",
"type": "text",
"label": "Heading 1"
},
{
"id": "section-large-heading",
"type": "text",
"label": "Heading 2"
},
{
"id": "description",
"type": "textarea",
"label": "Description"
},
{
"id": "view-btn-link",
"type": "url",
"label": "Button URL"
},
{
"id": "view-btn",
"type": "text",
"label": "Button name"
}
],
"presets": [
{
"name": "Welcome section Test",
"category": "ADVANCED LAYOUT"
}
]
}
{% endschema %}
{% stylesheet %}
  <style>
  .metafields-demo {
    display: flex;
    gap: 15px;
    flex-wrap: wrap;
  }

  .customize-section {
    width: 100%;
    max-width: 1120px;
    margin: auto;
  }

  .label {
    min-width: 180px;
  }

  .section-inner {
    display: flex;
    border-radius: 5px;
    column-gap: 20px;
    background-color: #475569;
    padding: 14px;
    color: white;
    align-items: center;
  }

  .section-inner + .section-inner {
    margin-top: 6px;
  }

  .section-right {
    display: grid;
    gap: 10px;
    grid-template-columns: 1fr 1fr;
    width: 100%;
  }

  .metafield {
    color: #1e293b;
    padding: 5px 15px;
    border-radius: 5px;
    background-color: white;
    overflow-wrap: anywhere;
  }

  .metafield.input {
    font-family: monospace;
    background-color: black;
    color: white;
  }
</style>

{% endstylesheet %}
{% javascript %}
{% endjavascript %}